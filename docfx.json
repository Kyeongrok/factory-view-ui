{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "src": "."
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0-windows"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["docs/**.md", "docs/**/toc.yml", "toc.yml", "*.md"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appTitle": "Factory View API Documentation",
      "_appName": "Factory View MES",
      "_appFooter": "Factory View MES API Documentation",
      "_enableSearch": true
    }
  }
}
