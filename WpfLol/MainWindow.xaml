<Window x:Class="WpfLol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WpfLol.Controls"
        xmlns:types="clr-namespace:WpfLol.Types"
        mc:Ignorable="d"
        Background="#1F303A"
        Title="FactoryViewUI Controls Demo" Height="550" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MenuButton Demo (Top Menu Bar) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#1F303A">
            <controls:MenuButton Content="System" MenuType="System" IsActive="True">
                <controls:MenuButton.Icon>
                    <TextBlock Text="⚙" FontSize="24" Foreground="#B9C2D3"/>
                </controls:MenuButton.Icon>
                <controls:MenuButton.ActiveIcon>
                    <TextBlock Text="⚙" FontSize="24" Foreground="White"/>
                </controls:MenuButton.ActiveIcon>
            </controls:MenuButton>
            <controls:MenuButton Content="Production" MenuType="Production">
                <controls:MenuButton.Icon>
                    <TextBlock Text="�icing" FontSize="24" Foreground="#B9C2D3"/>
                </controls:MenuButton.Icon>
                <controls:MenuButton.ActiveIcon>
                    <TextBlock Text="🏭" FontSize="24" Foreground="White"/>
                </controls:MenuButton.ActiveIcon>
            </controls:MenuButton>
            <controls:MenuButton Content="Quality" MenuType="Quality">
                <controls:MenuButton.Icon>
                    <TextBlock Text="✓" FontSize="24" Foreground="#B9C2D3"/>
                </controls:MenuButton.Icon>
                <controls:MenuButton.ActiveIcon>
                    <TextBlock Text="✓" FontSize="24" Foreground="White"/>
                </controls:MenuButton.ActiveIcon>
            </controls:MenuButton>
            <controls:MenuButton Content="Material" MenuType="Material">
                <controls:MenuButton.Icon>
                    <TextBlock Text="📦" FontSize="24" Foreground="#B9C2D3"/>
                </controls:MenuButton.Icon>
                <controls:MenuButton.ActiveIcon>
                    <TextBlock Text="📦" FontSize="24" Foreground="White"/>
                </controls:MenuButton.ActiveIcon>
            </controls:MenuButton>
            <controls:MenuButton Content="Purchase" MenuType="Purchase">
                <controls:MenuButton.Icon>
                    <TextBlock Text="🛒" FontSize="24" Foreground="#B9C2D3"/>
                </controls:MenuButton.Icon>
                <controls:MenuButton.ActiveIcon>
                    <TextBlock Text="🛒" FontSize="24" Foreground="White"/>
                </controls:MenuButton.ActiveIcon>
            </controls:MenuButton>
            <controls:MenuButton Content="Equipment" MenuType="Equipment">
                <controls:MenuButton.Icon>
                    <TextBlock Text="🔧" FontSize="24" Foreground="#B9C2D3"/>
                </controls:MenuButton.Icon>
                <controls:MenuButton.ActiveIcon>
                    <TextBlock Text="🔧" FontSize="24" Foreground="White"/>
                </controls:MenuButton.ActiveIcon>
            </controls:MenuButton>
            <controls:MenuButton Content="Sales" MenuType="Sales">
                <controls:MenuButton.Icon>
                    <TextBlock Text="💰" FontSize="24" Foreground="#B9C2D3"/>
                </controls:MenuButton.Icon>
                <controls:MenuButton.ActiveIcon>
                    <TextBlock Text="💰" FontSize="24" Foreground="White"/>
                </controls:MenuButton.ActiveIcon>
            </controls:MenuButton>
            <controls:MenuButton Content="Master" MenuType="Master">
                <controls:MenuButton.Icon>
                    <TextBlock Text="📋" FontSize="24" Foreground="#B9C2D3"/>
                </controls:MenuButton.Icon>
                <controls:MenuButton.ActiveIcon>
                    <TextBlock Text="📋" FontSize="24" Foreground="White"/>
                </controls:MenuButton.ActiveIcon>
            </controls:MenuButton>
        </StackPanel>

        <!-- MenuLabelControl Demo (중메뉴) -->
        <Border Grid.Row="1" Background="#010A13" BorderBrush="#553D4143" BorderThickness="0,1">
            <StackPanel Orientation="Horizontal">
                <controls:MenuLabelControl Content="사용자 관리"/>
                <controls:MenuLabelControl Content="권한 관리"/>
                <controls:MenuLabelControl Content="메뉴 관리"/>
                <controls:MenuLabelControl Content="코드 관리"/>
                <controls:MenuLabelControl Content="시스템 설정"/>
            </StackPanel>
        </Border>

        <!-- MenuPanel with MenuLabel Demo (소메뉴 드롭다운) -->
        <controls:MenuPanel Grid.Row="2" IsOpen="True" Padding="10">
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="150">
                    <controls:MenuLabel Content="사용자 등록"/>
                    <controls:MenuLabel Content="사용자 조회"/>
                    <controls:MenuLabel Content="사용자 수정"/>
                    <controls:MenuLabel Content="비밀번호 초기화"/>
                </StackPanel>
                <StackPanel Width="150">
                    <controls:MenuLabel Content="권한 등록"/>
                    <controls:MenuLabel Content="권한 조회"/>
                    <controls:MenuLabel Content="역할 관리"/>
                </StackPanel>
                <StackPanel Width="150">
                    <controls:MenuLabel Content="메뉴 등록"/>
                    <controls:MenuLabel Content="메뉴 조회"/>
                    <controls:MenuLabel Content="메뉴 순서 변경"/>
                </StackPanel>
            </StackPanel>
        </controls:MenuPanel>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Vertical" Margin="20">

                <!-- LabelValueControl Demo -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="LabelValueControl Demo"
                                   Foreground="#323232" FontSize="18" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <!-- LabelTextEdit -->
                            <controls:LabelTextEdit Caption="사용자 ID" IsRequired="True" CaptionWidth="120" Width="400" Margin="0,5"/>
                            <controls:LabelTextEdit Caption="사용자명" IsRequired="True" CaptionWidth="120" Width="400" Margin="0,5"/>
                            <controls:LabelTextEdit Caption="이메일" CaptionWidth="120" Width="400" Margin="0,5"/>
                            <controls:LabelTextEdit Caption="비고" CaptionWidth="120" Width="400" IsReadOnly="True" Margin="0,5"/>

                            <!-- LabelLookUpEdit -->
                            <controls:LabelLookUpEdit Caption="부서" IsRequired="True" CaptionWidth="120" Width="400" Margin="0,5"/>
                            <controls:LabelLookUpEdit Caption="직급" CaptionWidth="120" Width="400" Margin="0,5"/>

                            <!-- LabelDateEdit -->
                            <controls:LabelDateEdit Caption="입사일" IsRequired="True" CaptionWidth="120" Width="400" Margin="0,5"/>
                            <controls:LabelDateEdit Caption="퇴사일" CaptionWidth="120" Width="400" Margin="0,5"/>

                            <!-- LabelCheckEdit -->
                            <controls:LabelCheckEdit Caption="사용여부" CaptionWidth="120" Width="400" Margin="0,5" IsChecked="True" CheckText="사용"/>
                            <controls:LabelCheckEdit Caption="관리자" CaptionWidth="120" Width="400" Margin="0,5" CheckText="관리자 권한 부여"/>

                            <!-- LabelRadioGroup -->
                            <controls:LabelRadioGroup Caption="성별" CaptionWidth="120" Width="400" Margin="0,5" FieldName="gender">
                                <controls:LabelRadioGroup.ItemsSource>
                                    <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                        <sys:String>남성</sys:String>
                                        <sys:String>여성</sys:String>
                                    </x:Array>
                                </controls:LabelRadioGroup.ItemsSource>
                            </controls:LabelRadioGroup>

                            <!-- LabelDateEditBetween -->
                            <controls:LabelDateEditBetween Caption="조회기간" IsRequired="True" CaptionWidth="120" Width="500" Margin="0,5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- FvGridControl Demo -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="FvGridControl Demo"
                                   Foreground="#323232" FontSize="18" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <controls:FvGridControl x:Name="demoGrid" Height="200" Width="700">
                            <controls:FvGridControl.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                                <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="120"/>
                                <DataGridTextColumn Header="부서" Binding="{Binding Department}" Width="100"/>
                                <DataGridTextColumn Header="직급" Binding="{Binding Position}" Width="100"/>
                                <DataGridTextColumn Header="입사일" Binding="{Binding HireDate}" Width="100"/>
                            </controls:FvGridControl.Columns>
                        </controls:FvGridControl>
                    </StackPanel>
                </Border>

                <!-- AccordionControl Demo -->
                <Border CornerRadius="8" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="AccordionControl Demo"
                                   Foreground="White" FontSize="18" FontWeight="Bold" Background="#1F303A"
                                   HorizontalAlignment="Stretch" Padding="20,10" Margin="0,0,0,0"/>

                        <controls:AccordionControl Width="300" Height="250">
                            <controls:AccordionItem Header="시스템 관리" IsGroup="True" IsExpanded="True">
                                <controls:AccordionItem Header="사용자 관리"/>
                                <controls:AccordionItem Header="권한 관리"/>
                                <controls:AccordionItem Header="메뉴 관리"/>
                            </controls:AccordionItem>
                            <controls:AccordionItem Header="생산 관리" IsGroup="True">
                                <controls:AccordionItem Header="작업 지시"/>
                                <controls:AccordionItem Header="생산 실적"/>
                                <controls:AccordionItem Header="불량 관리"/>
                            </controls:AccordionItem>
                            <controls:AccordionItem Header="품질 관리" IsGroup="True">
                                <controls:AccordionItem Header="검사 기준"/>
                                <controls:AccordionItem Header="검사 실적"/>
                            </controls:AccordionItem>
                        </controls:AccordionControl>
                    </StackPanel>
                </Border>

                <!-- RoundButton Demo -->
                <Border Background="#2A3F4D" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="RoundButton Demo"
                                   Foreground="White" FontSize="18" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <controls:RoundButton Content="Blue (Default)" ButtonColor="Blue" Margin="5"/>
                            <controls:RoundButton Content="Green" ButtonColor="Green" Margin="5"/>
                            <controls:RoundButton Content="Orange" ButtonColor="Orange" Margin="5"/>
                            <controls:RoundButton Content="Black" ButtonColor="Black" Margin="5"/>
                            <controls:RoundButton Content="White" ButtonColor="White" Margin="5"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                            <controls:RoundButton Content="Search" ButtonColor="Blue" Margin="5"/>
                            <controls:RoundButton Content="Add" ButtonColor="Green" Margin="5"/>
                            <controls:RoundButton Content="Save" ButtonColor="Blue" Margin="5"/>
                            <controls:RoundButton Content="Delete" ButtonColor="Orange" Margin="5"/>
                            <controls:RoundButton Content="Cancel" ButtonColor="Black" Margin="5"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                            <controls:RoundButton Content="Rounded More" ButtonColor="Blue" CornerRadius="12" Margin="5"/>
                            <controls:RoundButton Content="Disabled" ButtonColor="Green" IsEnabled="False" Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
