<Window x:Class="FactoryView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WpfLol.Controls;assembly=WpfLol"
        xmlns:units="clr-namespace:FactoryView.Support.UI.Units;assembly=FactoryView.Support"
        mc:Ignorable="d"
        Title="FactoryView"
        Height="800" Width="1400"
        WindowState="Maximized"
        Background="#1F303A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Top Menu Bar -->
            <RowDefinition Height="Auto"/>  <!-- Middle Menu Bar -->
            <RowDefinition Height="Auto"/>  <!-- Sub Menu Panel -->
            <RowDefinition Height="*"/>     <!-- Content Area -->
            <RowDefinition Height="Auto"/>  <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0" Background="#1F303A">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>  <!-- Logo -->
                    <ColumnDefinition Width="Auto"/>  <!-- Settings -->
                    <ColumnDefinition Width="*"/>     <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/>  <!-- Menu Buttons -->
                </Grid.ColumnDefinitions>

                <!-- Logo Area -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <TextBlock Text="FactoryView"
                               Foreground="White"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Cursor="Hand"
                               MouseLeftButtonUp="Logo_Click"/>
                    <Button x:Name="btnSetting" Content="⚙"
                            Background="Transparent"
                            Foreground="#B9C2D3"
                            BorderThickness="0"
                            FontSize="18"
                            Margin="20,0,0,0"
                            Cursor="Hand"
                            Click="Settings_Click"/>
                    <Button x:Name="btnSubMenu" Content="☰"
                            Background="Transparent"
                            Foreground="#B9C2D3"
                            BorderThickness="0"
                            FontSize="18"
                            Margin="10,0,0,0"
                            Cursor="Hand"
                            Click="ToggleAccordion_Click"/>
                </StackPanel>

                <!-- Menu Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <controls:MenuButton x:Name="menuButtonSystem" Content="System" MenuType="System" Click="MenuButton_Click">
                        <controls:MenuButton.Icon>
                            <TextBlock Text="⚙" FontSize="24" Foreground="#B9C2D3"/>
                        </controls:MenuButton.Icon>
                        <controls:MenuButton.ActiveIcon>
                            <TextBlock Text="⚙" FontSize="24" Foreground="White"/>
                        </controls:MenuButton.ActiveIcon>
                    </controls:MenuButton>
                    <controls:MenuButton x:Name="menuButtonProduction" Content="Production" MenuType="Production" Click="MenuButton_Click">
                        <controls:MenuButton.Icon>
                            <TextBlock Text="🏭" FontSize="24" Foreground="#B9C2D3"/>
                        </controls:MenuButton.Icon>
                        <controls:MenuButton.ActiveIcon>
                            <TextBlock Text="🏭" FontSize="24" Foreground="White"/>
                        </controls:MenuButton.ActiveIcon>
                    </controls:MenuButton>
                    <controls:MenuButton x:Name="menuButtonQuality" Content="Quality" MenuType="Quality" Click="MenuButton_Click">
                        <controls:MenuButton.Icon>
                            <TextBlock Text="✓" FontSize="24" Foreground="#B9C2D3"/>
                        </controls:MenuButton.Icon>
                        <controls:MenuButton.ActiveIcon>
                            <TextBlock Text="✓" FontSize="24" Foreground="White"/>
                        </controls:MenuButton.ActiveIcon>
                    </controls:MenuButton>
                    <controls:MenuButton x:Name="menuButtonMaterial" Content="Material" MenuType="Material" Click="MenuButton_Click">
                        <controls:MenuButton.Icon>
                            <TextBlock Text="📦" FontSize="24" Foreground="#B9C2D3"/>
                        </controls:MenuButton.Icon>
                        <controls:MenuButton.ActiveIcon>
                            <TextBlock Text="📦" FontSize="24" Foreground="White"/>
                        </controls:MenuButton.ActiveIcon>
                    </controls:MenuButton>
                    <controls:MenuButton x:Name="menuButtonPurchase" Content="Purchase" MenuType="Purchase" Click="MenuButton_Click">
                        <controls:MenuButton.Icon>
                            <TextBlock Text="🛒" FontSize="24" Foreground="#B9C2D3"/>
                        </controls:MenuButton.Icon>
                        <controls:MenuButton.ActiveIcon>
                            <TextBlock Text="🛒" FontSize="24" Foreground="White"/>
                        </controls:MenuButton.ActiveIcon>
                    </controls:MenuButton>
                    <controls:MenuButton x:Name="menuButtonEquipment" Content="Equipment" MenuType="Equipment" Click="MenuButton_Click">
                        <controls:MenuButton.Icon>
                            <TextBlock Text="🔧" FontSize="24" Foreground="#B9C2D3"/>
                        </controls:MenuButton.Icon>
                        <controls:MenuButton.ActiveIcon>
                            <TextBlock Text="🔧" FontSize="24" Foreground="White"/>
                        </controls:MenuButton.ActiveIcon>
                    </controls:MenuButton>
                    <controls:MenuButton x:Name="menuButtonSales" Content="Sales" MenuType="Sales" Click="MenuButton_Click">
                        <controls:MenuButton.Icon>
                            <TextBlock Text="💰" FontSize="24" Foreground="#B9C2D3"/>
                        </controls:MenuButton.Icon>
                        <controls:MenuButton.ActiveIcon>
                            <TextBlock Text="💰" FontSize="24" Foreground="White"/>
                        </controls:MenuButton.ActiveIcon>
                    </controls:MenuButton>
                    <controls:MenuButton x:Name="menuButtonMaster" Content="Master" MenuType="Master" Click="MenuButton_Click">
                        <controls:MenuButton.Icon>
                            <TextBlock Text="📋" FontSize="24" Foreground="#B9C2D3"/>
                        </controls:MenuButton.Icon>
                        <controls:MenuButton.ActiveIcon>
                            <TextBlock Text="📋" FontSize="24" Foreground="White"/>
                        </controls:MenuButton.ActiveIcon>
                    </controls:MenuButton>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Middle Menu Bar -->
        <Border Grid.Row="1" Background="#010A13" BorderBrush="#553D4143" BorderThickness="0,1">
            <StackPanel x:Name="middleMenuPanel" Orientation="Horizontal" Margin="10,0">
                <!-- Middle menu items will be populated dynamically -->
            </StackPanel>
        </Border>

        <!-- Sub Menu Panel (Dropdown) -->
        <controls:MenuPanel x:Name="subMenuPanel" Grid.Row="2" IsOpen="False" Padding="15">
            <WrapPanel x:Name="subMenuContainer" Orientation="Horizontal">
                <!-- Sub menu items will be populated dynamically -->
            </WrapPanel>
        </controls:MenuPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="accordionColumn" Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Accordion Menu (Left Side) -->
            <Border Grid.Column="0" Background="#1F303A" BorderBrush="#2A3F4D" BorderThickness="0,0,1,0">
                <units:AccordionControl x:Name="accordionMenu">
                    <!-- Sample menu structure -->
                    <units:AccordionItem Header="시스템 관리" IsGroup="True" IsExpanded="True">
                        <units:AccordionItem Header="사용자 관리" Tag="UserManagement"/>
                        <units:AccordionItem Header="권한 관리" Tag="RoleManagement"/>
                        <units:AccordionItem Header="메뉴 관리" Tag="MenuManagement"/>
                        <units:AccordionItem Header="코드 관리" Tag="CodeManagement"/>
                    </units:AccordionItem>
                    <units:AccordionItem Header="생산 관리" IsGroup="True">
                        <units:AccordionItem Header="작업 지시" Tag="WorkOrder"/>
                        <units:AccordionItem Header="생산 실적" Tag="ProductionResult"/>
                        <units:AccordionItem Header="불량 관리" Tag="DefectManagement"/>
                    </units:AccordionItem>
                    <units:AccordionItem Header="품질 관리" IsGroup="True">
                        <units:AccordionItem Header="검사 기준" Tag="InspectionStandard"/>
                        <units:AccordionItem Header="검사 실적" Tag="InspectionResult"/>
                    </units:AccordionItem>
                    <units:AccordionItem Header="자재 관리" IsGroup="True">
                        <units:AccordionItem Header="입고 관리" Tag="MaterialIncome"/>
                        <units:AccordionItem Header="출고 관리" Tag="MaterialOutcome"/>
                        <units:AccordionItem Header="재고 현황" Tag="InventoryStatus"/>
                    </units:AccordionItem>
                </units:AccordionControl>
            </Border>

            <!-- Tab Content Area (MDI-like) -->
            <Border Grid.Column="1" Background="#F0F0F0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Content Area -->
                    <TabControl x:Name="tabContent" Grid.Row="0" Background="White">
                        <TabItem Header="Dashboard">
                            <Grid Background="#F5F5F5">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="FactoryView Dashboard"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#1F303A"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Welcome to FactoryView MES System"
                                               FontSize="16"
                                               Foreground="#666666"
                                               Margin="0,10,0,0"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>

                    <!-- Tab Header at Bottom -->
                    <Border Grid.Row="1" Background="#E0E0E0" Height="30">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                            <TextBlock Text="Tabs: " Foreground="#666666" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#1F303A" Height="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="statusMessage"
                           Grid.Column="0"
                           Text="Ready"
                           Foreground="#B9C2D3"
                           VerticalAlignment="Center"
                           Margin="10,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                    <TextBlock x:Name="userInfo"
                               Text="User: Guest"
                               Foreground="#B9C2D3"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <TextBlock x:Name="serverTime"
                               Text=""
                               Foreground="#B9C2D3"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
