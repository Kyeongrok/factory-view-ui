<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:FactoryView.Support.UI.Units">

    <!-- 닫기 버튼 색상 -->
    <SolidColorBrush x:Key="CloseButtonForeground" Color="#CFCFD0"/>
    <SolidColorBrush x:Key="CloseButtonHoverBackground" Color="#3A3A3C"/>
    <SolidColorBrush x:Key="CloseButtonPressedBackground" Color="#2F2F31"/>

    <Style TargetType="{x:Type units:TabCloseButton}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource CloseButtonForeground}"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="ToolTip" Value="Close"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:TabCloseButton}">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            CornerRadius="3"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            RenderTransformOrigin="0.5,0.5">
                        <Viewbox Stretch="Uniform" Width="10" Height="10">
                            <Canvas Width="12" Height="12">
                                <Path x:Name="IconPath"
                                      Data="M1,1 L11,11 M11,1 L1,11"
                                      Stroke="{StaticResource CloseButtonForeground}"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                            </Canvas>
                        </Viewbox>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource CloseButtonHoverBackground}"/>
                            <Setter TargetName="IconPath" Property="Stroke" Value="#FFFFFF"/>
                            <Setter TargetName="Bd" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource CloseButtonPressedBackground}"/>
                            <Setter TargetName="IconPath" Property="Stroke" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
