<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:FactoryView.Support.UI.Units"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <!-- 로고 영역 버튼 스타일 -->
    <Style x:Key="LogoAreaButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#B9C2D3"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2A3F4D"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#354F5D"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type units:LogoArea}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:LogoArea}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <!-- 로고 텍스트 -->
                        <TextBlock Text="{TemplateBinding LogoText}"
                                   Foreground="White"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"/>

                        <!-- Settings 버튼 -->
                        <Button Style="{StaticResource LogoAreaButtonStyle}"
                                Margin="20,0,0,0"
                                ToolTip="Settings"
                                Command="{TemplateBinding SettingsCommand}">
                            <iconPacks:PackIconMaterial Kind="Cog" Width="18" Height="18" Foreground="#B9C2D3"/>
                        </Button>

                        <!-- Toggle 버튼 -->
                        <Button Style="{StaticResource LogoAreaButtonStyle}"
                                Margin="10,0,0,0"
                                ToolTip="Toggle Menu"
                                Command="{TemplateBinding ToggleCommand}">
                            <iconPacks:PackIconMaterial Kind="Menu" Width="18" Height="18" Foreground="#B9C2D3"/>
                        </Button>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
