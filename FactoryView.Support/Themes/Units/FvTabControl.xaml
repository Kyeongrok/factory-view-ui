<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:FactoryView.Support.UI.Units">

    <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

    <!-- 공용 텍스트/버튼 배경 리소스 -->
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#FFCFCFD0"/>
    <SolidColorBrush x:Key="CloseHoverBackground" Color="#3A3A3C"/>
    <SolidColorBrush x:Key="ClosePressedBackground" Color="#2F2F31"/>

    <!-- 색상 팔레트 -->
    <Color x:Key="HeaderBackgroundColor">#FF2A2C2E</Color>
    <Color x:Key="TabNormalColor">#FF333436</Color>
    <Color x:Key="TabHoverColor">#FF3E4043</Color>
    <Color x:Key="TabSelectedColor">#FF1F2022</Color>
    <Color x:Key="ContentBackgroundColor">#FF151617</Color>
    <Color x:Key="SeparatorColor">#FF202020</Color>

    <SolidColorBrush x:Key="HeaderBackground" Color="{StaticResource HeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="TabNormal" Color="{StaticResource TabNormalColor}"/>
    <SolidColorBrush x:Key="TabHover" Color="{StaticResource TabHoverColor}"/>
    <SolidColorBrush x:Key="TabSelected" Color="{StaticResource TabSelectedColor}"/>
    <SolidColorBrush x:Key="ContentBackground" Color="{StaticResource ContentBackgroundColor}"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>

    <!-- TabItem 스타일: 통일된 색상, 모서리, 선택 시 강조 -->
    <Style x:Key="FvTabItemStyle" TargetType="TabItem">
        <Setter Property="Background" Value="{StaticResource TabNormal}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="Margin" Value="6,6,0,0"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="8,8,8,0"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter x:Name="ContentSite"
                                          ContentSource="Header"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource TabSelected}"/>
                            <Setter TargetName="Border" Property="Margin" Value="6,2,0,0"/>
                            <Setter Property="Panel.ZIndex" Value="2"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#20000000"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource TabHover}"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource TabSelected}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- FvTabControl 메인 스타일: 헤더 바 정리, 구분선, 콘텐츠 패딩 -->
    <Style TargetType="{x:Type units:FvTabControl}">
        <Setter Property="Background" Value="{StaticResource ContentBackground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource FvTabItemStyle}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:FvTabControl}">
                    <Grid KeyboardNavigation.TabNavigation="Local"
                          SnapsToDevicePixels="True"
                          ClipToBounds="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1"/> <!-- separator -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Header Panel -->
                        <Border Grid.Row="0"
                                Background="{StaticResource HeaderBackground}"
                                Padding="8,0,8,2"
                                BorderThickness="0">
                            <DockPanel LastChildFill="True">
                                <!-- 새 탭 버튼 -->
                                <Button DockPanel.Dock="Right"
                                        Content="+"
                                        Width="32" Height="32"
                                        Background="Transparent"
                                        Foreground="#A0A0A0"
                                        BorderThickness="0"
                                        FontSize="16"
                                        Cursor="Hand"
                                        Command="{Binding AddTabCommand, RelativeSource={RelativeSource AncestorType=units:FvTabControl}}"
                                        Visibility="{Binding ShowAddButton, RelativeSource={RelativeSource AncestorType=units:FvTabControl}, Converter={StaticResource BoolToVisConverter}}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#3B3B3D"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- 탭 패널 -->
                                <TabPanel x:Name="HeaderPanel"
                                          IsItemsHost="True"
                                          KeyboardNavigation.TabIndex="1"
                                          Panel.ZIndex="1"/>
                            </DockPanel>
                        </Border>

                        <!-- 구분선 -->
                        <Border Grid.Row="1" Background="{StaticResource SeparatorBrush}" Height="1"/>

                        <!-- Tab Content -->
                        <Border x:Name="ContentPanel"
                                Grid.Row="2"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="0"
                                KeyboardNavigation.TabNavigation="Local"
                                KeyboardNavigation.DirectionalNavigation="Contained"
                                KeyboardNavigation.TabIndex="2">
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              ContentSource="SelectedContent"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="HeaderText"
                                   Text="{Binding Header}"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="13"
                                   Margin="0,0,8,0"/>
                        <units:TabCloseButton x:Name="CloseBtn"
                                              Margin="6,0,0,0"
                                              Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=units:FvTabControl}}"
                                              CommandParameter="{Binding FormName}"
                                              Visibility="{Binding DataContext.ShowCloseButton, RelativeSource={RelativeSource AncestorType=units:FvTabControl}, Converter={StaticResource BoolToVisConverter}}"/>
                    </StackPanel>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TabItem}}" Value="True">
                            <Setter TargetName="HeaderText" Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter TargetName="HeaderText" Property="FontWeight" Value="SemiBold"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
