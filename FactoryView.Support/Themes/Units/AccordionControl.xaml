<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:FactoryView.Support.UI.Units">

    <!-- AccordionControl Style (아코디언 메뉴) -->
    <Style TargetType="{x:Type units:AccordionControl}">
        <Setter Property="Background" Value="#1F303A"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:AccordionControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer Focusable="False" Padding="{TemplateBinding Padding}">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- AccordionItem Style (아코디언 항목) -->
    <Style TargetType="{x:Type units:AccordionItem}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:AccordionItem}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border x:Name="headerBorder"
                                Grid.Row="0"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <ContentPresenter Grid.Column="0"
                                                  Content="{TemplateBinding Icon}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>

                                <!-- Header Text -->
                                <ContentPresenter Grid.Column="1"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"/>

                                <!-- Expand Arrow -->
                                <Path x:Name="expandArrow"
                                      Grid.Column="2"
                                      Data="M 0 0 L 4 4 L 8 0"
                                      Stroke="{TemplateBinding Foreground}"
                                      StrokeThickness="2"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"
                                      Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Items -->
                        <Border x:Name="itemsBorder"
                                Grid.Row="1"
                                Background="#010A13"
                                Visibility="Collapsed">
                            <ItemsPresenter/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsGroup" Value="True">
                            <Setter TargetName="headerBorder" Property="Background" Value="#1F303A"/>
                            <Setter TargetName="expandArrow" Property="Visibility" Value="Visible"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="itemsBorder" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="expandArrow" Property="Data" Value="M 0 4 L 4 0 L 8 4"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="headerBorder" Property="Background" Value="#13437C"/>
                            <Setter Property="Foreground" Value="#00A3FF"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="headerBorder" Property="Background" Value="#13437C"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
