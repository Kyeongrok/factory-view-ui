<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:FactoryView.Navigation.UI.Views">

    <Style TargetType="{x:Type views:TopMenuContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:TopMenuContent}">
                    <Border Background="#1F303A">
                        <ItemsControl ItemsSource="{Binding TopMenuList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding MenuName}"
                                            Width="80" Height="50"
                                            Background="Transparent"
                                            Foreground="#B9C2D3"
                                            BorderThickness="0"
                                            FontSize="12"
                                            Cursor="Hand"
                                            Command="{Binding DataContext.TopMenuClickCommand, RelativeSource={RelativeSource AncestorType=views:TopMenuContent}}"
                                            CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    Padding="10,5">
                                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding IconName, FallbackValue=M}"
                                                                               FontSize="20"
                                                                               Foreground="#B9C2D3"
                                                                               HorizontalAlignment="Center"/>
                                                                    <TextBlock Text="{Binding MenuName}"
                                                                               FontSize="11"
                                                                               Foreground="#B9C2D3"
                                                                               HorizontalAlignment="Center"
                                                                               Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#2A3F4D"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
