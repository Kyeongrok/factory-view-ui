<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:FactoryView.Navigation.UI.Views">

    <Style TargetType="{x:Type views:NavigationContents}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:NavigationContents}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Top Menu Bar (1 Depth) -->
                        <Border Grid.Row="0" Background="#1F303A">
                            <ItemsControl ItemsSource="{Binding TopMenuList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding MenuName}"
                                                Width="80" Height="50"
                                                Background="Transparent"
                                                Foreground="#B9C2D3"
                                                BorderThickness="0"
                                                FontSize="12"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.TopMenuClickCommand, RelativeSource={RelativeSource AncestorType=views:NavigationContents}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        Padding="10,5">
                                                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <TextBlock Text="{Binding IconName, FallbackValue=M}"
                                                                                   FontSize="20"
                                                                                   Foreground="#B9C2D3"
                                                                                   HorizontalAlignment="Center"/>
                                                                        <TextBlock Text="{Binding MenuName}"
                                                                                   FontSize="11"
                                                                                   Foreground="#B9C2D3"
                                                                                   HorizontalAlignment="Center"
                                                                                   Margin="0,2,0,0"/>
                                                                    </StackPanel>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#2A3F4D"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <!-- Middle Menu Bar (2 Depth) -->
                        <Border Grid.Row="1" Background="#010A13" BorderBrush="#553D4143" BorderThickness="0,1">
                            <ItemsControl ItemsSource="{Binding MiddleMenuList}" Margin="10,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding MenuName}"
                                                Background="Transparent"
                                                Foreground="#B9C2D3"
                                                BorderThickness="0"
                                                FontSize="13"
                                                Padding="15,8"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.MiddleMenuClickCommand, RelativeSource={RelativeSource AncestorType=views:NavigationContents}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        Background="Transparent"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <TextBlock Text="{TemplateBinding Content}"
                                                                               Foreground="#B9C2D3"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#1A2A3A"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <!-- Accordion Menu (Left Side) -->
                        <Border Grid.Row="2" Background="#1F303A" BorderBrush="#2A3F4D" BorderThickness="0,0,1,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding AccordionMenuList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Expander IsExpanded="True" Margin="0,0,0,5">
                                                <Expander.Header>
                                                    <TextBlock Text="{Binding MenuName}"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"/>
                                                </Expander.Header>
                                                <Expander.Style>
                                                    <Style TargetType="Expander">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Padding" Value="10,8"/>
                                                    </Style>
                                                </Expander.Style>
                                                <ItemsControl ItemsSource="{Binding Children}" Margin="20,5,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{Binding MenuName}"
                                                                    Background="Transparent"
                                                                    Foreground="#B9C2D3"
                                                                    BorderThickness="0"
                                                                    HorizontalContentAlignment="Left"
                                                                    Padding="10,6"
                                                                    Cursor="Hand"
                                                                    Command="{Binding DataContext.AccordionMenuClickCommand, RelativeSource={RelativeSource AncestorType=views:NavigationContents}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border x:Name="border"
                                                                                            Background="Transparent"
                                                                                            Padding="{TemplateBinding Padding}"
                                                                                            CornerRadius="3">
                                                                                        <TextBlock Text="{TemplateBinding Content}"
                                                                                                   Foreground="#B9C2D3"/>
                                                                                    </Border>
                                                                                    <ControlTemplate.Triggers>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter TargetName="border" Property="Background" Value="#2A3F4D"/>
                                                                                        </Trigger>
                                                                                    </ControlTemplate.Triggers>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Expander>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
