<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:FactoryView.Navigation.UI.Views"
                    xmlns:support="clr-namespace:FactoryView.Support.UI.Units;assembly=FactoryView.Support">

    <Style TargetType="{x:Type views:TopNavigationBar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:TopNavigationBar}">
                    <Border Background="#1F303A">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Logo Area -->
                            <support:LogoArea Grid.Column="0"
                                              LogoText="{TemplateBinding LogoText}"
                                              SettingsCommand="{TemplateBinding SettingsCommand}"
                                              ToggleCommand="{TemplateBinding ToggleCommand}"/>

                            <!-- Top Menu (1 Depth) -->
                            <views:TopMenuContent Grid.Column="1"
                                                  HorizontalAlignment="Right"
                                                  DataContext="{TemplateBinding NavigationDataContext}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
