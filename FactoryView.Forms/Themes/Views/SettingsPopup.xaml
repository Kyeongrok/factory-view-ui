<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:FactoryView.Forms.UI.Views">

    <Style TargetType="{x:Type views:SettingsPopup}">
        <Setter Property="Title" Value="Settings"/>
        <Setter Property="Width" Value="350"/>
        <Setter Property="Height" Value="250"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:SettingsPopup}">
                    <Border Background="#1F303A"
                            CornerRadius="8"
                            BorderBrush="#3A5A6A"
                            BorderThickness="1"
                            Margin="10">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" Background="#2A3F4D" CornerRadius="8,8,0,0">
                                <Grid>
                                    <TextBlock Text="Settings"
                                               Foreground="White"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               Margin="15,0"/>
                                    <Button x:Name="PART_CloseButton"
                                            Content="X"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Width="30" Height="30"
                                            Margin="0,0,5,0"
                                            Background="Transparent"
                                            Foreground="#B9C2D3"
                                            BorderThickness="0"
                                            Cursor="Hand"/>
                                </Grid>
                            </Border>

                            <!-- Content -->
                            <StackPanel Grid.Row="1" Margin="20">
                                <TextBlock Text="Language"
                                           Foreground="#B9C2D3"
                                           FontSize="14"
                                           Margin="0,0,0,10"/>
                                <ComboBox x:Name="PART_LanguageComboBox"
                                          Height="35"
                                          FontSize="14"/>
                            </StackPanel>

                            <!-- Footer -->
                            <Border Grid.Row="2" Background="#2A3F4D" CornerRadius="0,0,8,8">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Margin="15,0">
                                    <Button x:Name="PART_OkButton"
                                            Content="OK"
                                            Width="80" Height="30"
                                            Margin="0,0,10,0"
                                            Background="#4A90A4"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"/>
                                    <Button x:Name="PART_CancelButton"
                                            Content="Cancel"
                                            Width="80" Height="30"
                                            Background="#3A5A6A"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
