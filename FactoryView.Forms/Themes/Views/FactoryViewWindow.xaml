<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:based="clr-namespace:FactoryView.Support.UI.Units;assembly=FactoryView.Support"
                    xmlns:views="clr-namespace:FactoryView.Forms.UI.Views"
                    xmlns:main="clr-namespace:FactoryView.Main.UI.Views;assembly=FactoryView.Main"
                    xmlns:controls="clr-namespace:WpfLol.Controls;assembly=WpfLol">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FactoryView.Support;component/Themes/Generic.xaml"/>
        <ResourceDictionary Source="/FactoryView.Main;component/Themes/Generic.xaml"/>
        <ResourceDictionary Source="/WpfLol;component/Themes/Generic.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type views:FactoryViewWindow}"
           BasedOn="{StaticResource {x:Type based:DarkWindow}}">
        <Setter Property="Title" Value="FactoryView"/>
        <Setter Property="Width" Value="1400"/>
        <Setter Property="Height" Value="800"/>
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="Content">
            <Setter.Value>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Top Menu Bar -->
                    <Border Grid.Row="0" Background="#1F303A">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Logo Area -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                                <TextBlock Text="FactoryView"
                                           Foreground="White"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Cursor="Hand"/>
                                <Button Content="Settings"
                                        Background="Transparent"
                                        Foreground="#B9C2D3"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Margin="20,0,0,0"
                                        Cursor="Hand"
                                        Command="{Binding SettingsCommand}"/>
                                <Button Content="Toggle"
                                        Background="Transparent"
                                        Foreground="#B9C2D3"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Margin="10,0,0,0"
                                        Cursor="Hand"
                                        Command="{Binding ToggleAccordionCommand}"/>
                            </StackPanel>

                            <!-- Menu Buttons -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                <controls:MenuButton Content="System" MenuType="System"
                                                     Command="{Binding MenuButtonClickCommand}"
                                                     CommandParameter="System">
                                    <controls:MenuButton.Icon>
                                        <TextBlock Text="S" FontSize="24" Foreground="#B9C2D3"/>
                                    </controls:MenuButton.Icon>
                                    <controls:MenuButton.ActiveIcon>
                                        <TextBlock Text="S" FontSize="24" Foreground="White"/>
                                    </controls:MenuButton.ActiveIcon>
                                </controls:MenuButton>
                                <controls:MenuButton Content="Production" MenuType="Production"
                                                     Command="{Binding MenuButtonClickCommand}"
                                                     CommandParameter="Production">
                                    <controls:MenuButton.Icon>
                                        <TextBlock Text="P" FontSize="24" Foreground="#B9C2D3"/>
                                    </controls:MenuButton.Icon>
                                    <controls:MenuButton.ActiveIcon>
                                        <TextBlock Text="P" FontSize="24" Foreground="White"/>
                                    </controls:MenuButton.ActiveIcon>
                                </controls:MenuButton>
                                <controls:MenuButton Content="Quality" MenuType="Quality"
                                                     Command="{Binding MenuButtonClickCommand}"
                                                     CommandParameter="Quality">
                                    <controls:MenuButton.Icon>
                                        <TextBlock Text="Q" FontSize="24" Foreground="#B9C2D3"/>
                                    </controls:MenuButton.Icon>
                                    <controls:MenuButton.ActiveIcon>
                                        <TextBlock Text="Q" FontSize="24" Foreground="White"/>
                                    </controls:MenuButton.ActiveIcon>
                                </controls:MenuButton>
                                <controls:MenuButton Content="Material" MenuType="Material"
                                                     Command="{Binding MenuButtonClickCommand}"
                                                     CommandParameter="Material">
                                    <controls:MenuButton.Icon>
                                        <TextBlock Text="M" FontSize="24" Foreground="#B9C2D3"/>
                                    </controls:MenuButton.Icon>
                                    <controls:MenuButton.ActiveIcon>
                                        <TextBlock Text="M" FontSize="24" Foreground="White"/>
                                    </controls:MenuButton.ActiveIcon>
                                </controls:MenuButton>
                                <controls:MenuButton Content="Purchase" MenuType="Purchase"
                                                     Command="{Binding MenuButtonClickCommand}"
                                                     CommandParameter="Purchase">
                                    <controls:MenuButton.Icon>
                                        <TextBlock Text="$" FontSize="24" Foreground="#B9C2D3"/>
                                    </controls:MenuButton.Icon>
                                    <controls:MenuButton.ActiveIcon>
                                        <TextBlock Text="$" FontSize="24" Foreground="White"/>
                                    </controls:MenuButton.ActiveIcon>
                                </controls:MenuButton>
                                <controls:MenuButton Content="Equipment" MenuType="Equipment"
                                                     Command="{Binding MenuButtonClickCommand}"
                                                     CommandParameter="Equipment">
                                    <controls:MenuButton.Icon>
                                        <TextBlock Text="E" FontSize="24" Foreground="#B9C2D3"/>
                                    </controls:MenuButton.Icon>
                                    <controls:MenuButton.ActiveIcon>
                                        <TextBlock Text="E" FontSize="24" Foreground="White"/>
                                    </controls:MenuButton.ActiveIcon>
                                </controls:MenuButton>
                                <controls:MenuButton Content="Sales" MenuType="Sales"
                                                     Command="{Binding MenuButtonClickCommand}"
                                                     CommandParameter="Sales">
                                    <controls:MenuButton.Icon>
                                        <TextBlock Text="S" FontSize="24" Foreground="#B9C2D3"/>
                                    </controls:MenuButton.Icon>
                                    <controls:MenuButton.ActiveIcon>
                                        <TextBlock Text="S" FontSize="24" Foreground="White"/>
                                    </controls:MenuButton.ActiveIcon>
                                </controls:MenuButton>
                                <controls:MenuButton Content="Master" MenuType="Master"
                                                     Command="{Binding MenuButtonClickCommand}"
                                                     CommandParameter="Master">
                                    <controls:MenuButton.Icon>
                                        <TextBlock Text="M" FontSize="24" Foreground="#B9C2D3"/>
                                    </controls:MenuButton.Icon>
                                    <controls:MenuButton.ActiveIcon>
                                        <TextBlock Text="M" FontSize="24" Foreground="White"/>
                                    </controls:MenuButton.ActiveIcon>
                                </controls:MenuButton>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Middle Menu Bar -->
                    <Border Grid.Row="1" Background="#010A13" BorderBrush="#553D4143" BorderThickness="0,1">
                        <StackPanel x:Name="middleMenuPanel" Orientation="Horizontal" Margin="10,0">
                            <controls:MenuLabelControl Content="Sample Menu 1"/>
                            <controls:MenuLabelControl Content="Sample Menu 2"/>
                            <controls:MenuLabelControl Content="Sample Menu 3"/>
                        </StackPanel>
                    </Border>

                    <!-- Sub Menu Panel -->
                    <controls:MenuPanel Grid.Row="2" IsOpen="False" Padding="15">
                        <WrapPanel Orientation="Horizontal"/>
                    </controls:MenuPanel>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding AccordionWidth}"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Accordion Menu (Left Side) -->
                        <Border Grid.Column="0" Background="#1F303A" BorderBrush="#2A3F4D" BorderThickness="0,0,1,0">
                            <based:AccordionControl>
                                <based:AccordionItem Header="System" IsGroup="True" IsExpanded="True">
                                    <based:AccordionItem Header="User Management" Tag="UserManagement"/>
                                    <based:AccordionItem Header="Role Management" Tag="RoleManagement"/>
                                    <based:AccordionItem Header="Menu Management" Tag="MenuManagement"/>
                                </based:AccordionItem>
                                <based:AccordionItem Header="Production" IsGroup="True">
                                    <based:AccordionItem Header="Work Order" Tag="WorkOrder"/>
                                    <based:AccordionItem Header="Production Result" Tag="ProductionResult"/>
                                </based:AccordionItem>
                                <based:AccordionItem Header="Quality" IsGroup="True">
                                    <based:AccordionItem Header="Inspection" Tag="Inspection"/>
                                </based:AccordionItem>
                            </based:AccordionControl>
                        </Border>

                        <!-- Main Contents -->
                        <main:MainContents Grid.Column="1"/>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="4" Background="#1F303A" Height="25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding StatusMessage}"
                                       Foreground="#B9C2D3"
                                       VerticalAlignment="Center"
                                       Margin="10,0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                                <TextBlock Text="{Binding UserInfo}"
                                           Foreground="#B9C2D3"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <TextBlock Text="{Binding CurrentTime}"
                                           Foreground="#B9C2D3"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
