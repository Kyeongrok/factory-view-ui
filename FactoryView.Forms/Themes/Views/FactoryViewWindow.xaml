<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:based="clr-namespace:FactoryView.Support.UI.Units;assembly=FactoryView.Support"
                    xmlns:views="clr-namespace:FactoryView.Forms.UI.Views"
                    xmlns:main="clr-namespace:FactoryView.Main.UI.Views;assembly=FactoryView.Main"
                    xmlns:nav="clr-namespace:FactoryView.Navigation.UI.Views;assembly=FactoryView.Navigation">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FactoryView.Support;component/Themes/Generic.xaml"/>
        <ResourceDictionary Source="/FactoryView.Main;component/Themes/Generic.xaml"/>
        <ResourceDictionary Source="/FactoryView.Navigation;component/Themes/Generic.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type views:FactoryViewWindow}"
           BasedOn="{StaticResource {x:Type based:DarkWindow}}">
        <Setter Property="Title" Value="FactoryView"/>
        <Setter Property="Width" Value="1400"/>
        <Setter Property="Height" Value="800"/>
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="Content">
            <Setter.Value>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Top Menu Bar -->
                    <Border Grid.Row="0" Background="#1F303A">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Logo Area -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                                <TextBlock Text="FactoryView"
                                           Foreground="White"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Cursor="Hand"/>
                                <Button Content="Settings"
                                        Background="Transparent"
                                        Foreground="#B9C2D3"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Margin="20,0,0,0"
                                        Cursor="Hand"
                                        Command="{Binding SettingsCommand}"/>
                                <Button Content="Toggle"
                                        Background="Transparent"
                                        Foreground="#B9C2D3"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Margin="10,0,0,0"
                                        Cursor="Hand"
                                        Command="{Binding ToggleAccordionCommand}"/>
                            </StackPanel>

                            <!-- Top Menu (1 Depth) -->
                            <nav:TopMenuContent Grid.Column="1" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Middle Menu Bar (2 Depth) -->
                    <nav:MiddleMenuContent Grid.Row="1"/>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding AccordionWidth}"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Navigation Sidebar (Accordion) -->
                        <nav:NavigationContents Grid.Column="0"/>

                        <!-- Main Contents -->
                        <main:MainContents Grid.Column="1"/>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="3" Background="#1F303A" Height="25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding StatusMessage}"
                                       Foreground="#B9C2D3"
                                       VerticalAlignment="Center"
                                       Margin="10,0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                                <TextBlock Text="{Binding UserInfo}"
                                           Foreground="#B9C2D3"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <TextBlock Text="{Binding CurrentTime}"
                                           Foreground="#B9C2D3"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
