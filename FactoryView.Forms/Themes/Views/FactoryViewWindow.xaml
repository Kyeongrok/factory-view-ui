<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:based="clr-namespace:FactoryView.Support.UI.Units;assembly=FactoryView.Support"
                    xmlns:views="clr-namespace:FactoryView.Forms.UI.Views"
                    xmlns:main="clr-namespace:FactoryView.Main.UI.Views;assembly=FactoryView.Main"
                    xmlns:controls="clr-namespace:WpfLol.Controls;assembly=WpfLol">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FactoryView.Support;component/Themes/Generic.xaml"/>
        <ResourceDictionary Source="/FactoryView.Main;component/Themes/Generic.xaml"/>
        <ResourceDictionary Source="/WpfLol;component/Themes/Generic.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type views:FactoryViewWindow}"
           BasedOn="{StaticResource {x:Type based:DarkWindow}}">
        <Setter Property="Title" Value="FactoryView"/>
        <Setter Property="Width" Value="1400"/>
        <Setter Property="Height" Value="800"/>
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="Content">
            <Setter.Value>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Top Menu Bar -->
                    <Border Grid.Row="0" Background="#1F303A">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Logo Area -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                                <TextBlock Text="FactoryView"
                                           Foreground="White"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Cursor="Hand"/>
                                <Button Content="Settings"
                                        Background="Transparent"
                                        Foreground="#B9C2D3"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Margin="20,0,0,0"
                                        Cursor="Hand"
                                        Command="{Binding SettingsCommand}"/>
                                <Button Content="Toggle"
                                        Background="Transparent"
                                        Foreground="#B9C2D3"
                                        BorderThickness="0"
                                        FontSize="14"
                                        Margin="10,0,0,0"
                                        Cursor="Hand"
                                        Command="{Binding ToggleAccordionCommand}"/>
                            </StackPanel>

                            <!-- Dynamic Menu Buttons from API -->
                            <ItemsControl Grid.Column="3" ItemsSource="{Binding TopMenuList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding MenuName}"
                                                Width="80" Height="50"
                                                Background="Transparent"
                                                Foreground="#B9C2D3"
                                                BorderThickness="0"
                                                FontSize="12"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.TopMenuClickCommand, RelativeSource={RelativeSource AncestorType=views:FactoryViewWindow}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        Padding="10,5">
                                                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <TextBlock Text="{Binding IconName, FallbackValue=M}"
                                                                                   FontSize="20"
                                                                                   Foreground="#B9C2D3"
                                                                                   HorizontalAlignment="Center"/>
                                                                        <TextBlock Text="{Binding MenuName}"
                                                                                   FontSize="11"
                                                                                   Foreground="#B9C2D3"
                                                                                   HorizontalAlignment="Center"
                                                                                   Margin="0,2,0,0"/>
                                                                    </StackPanel>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#2A3F4D"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <!-- Middle Menu Bar (Sub menus from selected top menu) -->
                    <Border Grid.Row="1" Background="#010A13" BorderBrush="#553D4143" BorderThickness="0,1">
                        <ItemsControl ItemsSource="{Binding MiddleMenuList}" Margin="10,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding MenuName}"
                                            Background="Transparent"
                                            Foreground="#B9C2D3"
                                            BorderThickness="0"
                                            FontSize="13"
                                            Padding="15,8"
                                            Cursor="Hand"
                                            Command="{Binding DataContext.MiddleMenuClickCommand, RelativeSource={RelativeSource AncestorType=views:FactoryViewWindow}}"
                                            CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="Transparent"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <TextBlock Text="{TemplateBinding Content}"
                                                                           Foreground="#B9C2D3"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#1A2A3A"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                    <!-- Sub Menu Panel -->
                    <controls:MenuPanel Grid.Row="2" IsOpen="False" Padding="15">
                        <WrapPanel Orientation="Horizontal"/>
                    </controls:MenuPanel>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding AccordionWidth}"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Accordion Menu (Left Side) - Dynamic from API -->
                        <Border Grid.Column="0" Background="#1F303A" BorderBrush="#2A3F4D" BorderThickness="0,0,1,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding AccordionMenuList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Expander IsExpanded="True" Margin="0,0,0,5">
                                                <Expander.Header>
                                                    <TextBlock Text="{Binding MenuName}"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"/>
                                                </Expander.Header>
                                                <Expander.Style>
                                                    <Style TargetType="Expander">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Padding" Value="10,8"/>
                                                    </Style>
                                                </Expander.Style>
                                                <ItemsControl ItemsSource="{Binding Children}" Margin="20,5,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{Binding MenuName}"
                                                                    Background="Transparent"
                                                                    Foreground="#B9C2D3"
                                                                    BorderThickness="0"
                                                                    HorizontalContentAlignment="Left"
                                                                    Padding="10,6"
                                                                    Cursor="Hand"
                                                                    Command="{Binding DataContext.MiddleMenuClickCommand, RelativeSource={RelativeSource AncestorType=views:FactoryViewWindow}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border x:Name="border"
                                                                                            Background="Transparent"
                                                                                            Padding="{TemplateBinding Padding}"
                                                                                            CornerRadius="3">
                                                                                        <TextBlock Text="{TemplateBinding Content}"
                                                                                                   Foreground="#B9C2D3"/>
                                                                                    </Border>
                                                                                    <ControlTemplate.Triggers>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter TargetName="border" Property="Background" Value="#2A3F4D"/>
                                                                                        </Trigger>
                                                                                    </ControlTemplate.Triggers>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Expander>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <!-- Main Contents -->
                        <main:MainContents Grid.Column="1"
                                           DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=views:FactoryViewWindow}}"/>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="4" Background="#1F303A" Height="25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding StatusMessage}"
                                       Foreground="#B9C2D3"
                                       VerticalAlignment="Center"
                                       Margin="10,0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                                <TextBlock Text="{Binding UserInfo}"
                                           Foreground="#B9C2D3"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <TextBlock Text="{Binding CurrentTime}"
                                           Foreground="#B9C2D3"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
